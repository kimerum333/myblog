<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="vincent.home.myblog.repo.UserRepo">
    <select id="selectFirstUser" resultType="User">
      SELECT 
      	*
      FROM
      	USER
      WHERE
      	ID = 1;
    </select>
</mapper>